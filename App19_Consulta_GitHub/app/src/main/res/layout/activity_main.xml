<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Digite seu UsuÃ¡rio do GitHub..."
            android:ems="10"
            android:id="@+id/edtGit"
            app:layout_constraintStart_toStartOf="@id/gdlStart"
            app:layout_constraintTop_toTopOf="@id/gdlTop"/>

    <ImageButton
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:src="@drawable/loupe"
            app:layout_constraintEnd_toEndOf="@id/gdlEnd"
            app:layout_constraintTop_toTopOf="@id/edtGit"
            app:layout_constraintBottom_toBottomOf="@id/edtGit"
            android:id="@+id/btnPesquisar"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.05"
            android:id="@+id/gdlStart"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"
            android:id="@+id/gdlEnd"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.05"
            android:id="@+id/gdlTop"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"
            android:id="@+id/gdlBottom"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/edtGit"
            app:layout_constraintStart_toStartOf="parent"
    >
        <TextView
                android:id="@+id/imgPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text=""
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:text=""
                  app:layout_constraintTop_toBottomOf="@+id/imgPerfil"
                  app:layout_constraintStart_toStartOf="parent"
                  android:padding="10dp"
                  android:id="@+id/id"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:text=""
                  app:layout_constraintTop_toBottomOf="@+id/id"
                  app:layout_constraintStart_toStartOf="parent"
                  android:padding="10dp"
                  android:id="@+id/login"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:text=""
                  app:layout_constraintTop_toBottomOf="@+id/login"
                  app:layout_constraintStart_toStartOf="parent"
                  android:padding="10dp"
                  android:id="@+id/nome"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:text=""
                  app:layout_constraintTop_toBottomOf="@+id/nome"
                  app:layout_constraintStart_toStartOf="parent"
                  android:padding="10dp"
                  android:id="@+id/url"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>