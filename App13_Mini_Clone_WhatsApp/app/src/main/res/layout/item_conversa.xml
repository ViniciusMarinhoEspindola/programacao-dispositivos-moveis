<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#131c21">

            <ImageView
                    android:id="@+id/imgContato"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/contato"/>
            <TextView
                    android:id="@+id/nomeContato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="JOSEFFE BARROSO DE OLIVEIRA"
                    android:textSize="13dp"
                    android:paddingLeft="10dp"
                    android:textColor="#fff"
                    android:layout_marginTop="23dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgContato"
                    tools:ignore="MissingConstraints"/>

            <TextView
                    android:id="@+id/mensagem"
                    android:layout_width="245dp"
                    android:layout_height="109dp"
                    tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"
                    android:textSize="11dp"
                    android:paddingLeft="10dp"
                    android:textColor="#fff"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/nomeContato"
                    app:layout_constraintStart_toEndOf="@+id/imgContato"
                    tools:ignore="MissingConstraints"/>

            <TextView
                    android:id="@+id/horario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="11:33 da manhÃ£"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="10dp"
                    android:textColor="#00af9c"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>